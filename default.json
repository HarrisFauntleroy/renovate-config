{
  "extends": [
    "config:base",
    "group:monorepos",
    "group:recommended",
    "group:linters",
    "schedule:weekly"
  ],
  "timezone": "UTC",
  "minimumReleaseAge": 7,
  "prCreation": "not-pending",
  "rangeStrategy": "pin",
  "semanticCommits": true,
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on sunday"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "automerge": false
    },
    {
      "depTypeList": ["dependencies"],
      "groupName": "Runtime Dependencies",
      "groupSlug": "runtime-dependencies"
    },
    {
      "depTypeList": ["devDependencies"],
      "groupName": "Development Dependencies",
      "groupSlug": "dev-dependencies"
    },
    {
      "depTypeList": ["engines", "peerDependencies"],
      "groupName": "Framework & Peer Requirements",
      "groupSlug": "peer-dependencies"
    }
  ]
}
