{
	"extends": ["config:base"],
	"prHourlyLimit": 0,
	"prConcurrentLimit": 8,
	"separateMinorPatch": true,
	"addLabels": ["renovate"],
	"packageRules": [
		{
			"updateTypes": ["major"],
			"addLabels": ["major", "auto-merge"],
			"automerge": true
		},
		{
			"updateTypes": ["security"],
			"addLabels": ["security", "auto-merge"],
			"automerge": true
		},
		{
			"updateTypes": ["minor"],
			"addLabels": ["minor", "auto-merge"],
			"automerge": true
		},
		{
			"updateTypes": ["patch", "digest", "bump"],
			"addLabels": ["patch", "auto-merge"],
			"automerge": true
		}
	],
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	}
}
