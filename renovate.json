{
  "extends": [
    "config:base",
    "group:monorepos",
    "group:recommended",
    "group:linters"
  ],
  "timezone": "UTC",
  "prCreation": "not-pending",
  "prBodyNotes": ["@openai: ignore"],
  "stabilityDays": 7,
  "rangeStrategy": "bump",
  "semanticCommits": true,
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "lockFileMaintenance": {
    "enabled": true,
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["^@types/"],
      "groupName": "Type Definitions",
      "groupSlug": "type-definitions"
    },
    {
      "depTypeList": ["devDependencies"],
      "groupName": "Development Dependencies",
      "groupSlug": "dev-dependencies"
    },
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "automerge": false
    },
    {
      "matchPackageNames": ["eslint", "eslint-*"],
      "groupName": "ESLint Packages",
      "groupSlug": "eslint-packages"
    },
    {
      "matchPackageNames": ["next", "next-*"],
      "groupName": "Next.js Packages",
      "groupSlug": "next-packages"
    },
    {
      "matchPackageNames": ["react", "react-*"],
      "groupName": "React Packages",
      "groupSlug": "react-packages"
    },
    {
      "matchPackageNames": ["typescript", "ts-*"],
      "groupName": "TypeScript Packages",
      "groupSlug": "typescript-packages"
    },
    {
      "matchPackagePatterns": ["^@types/"],
      "groupName": "Type Definitions Packages",
      "groupSlug": "type-definitions-packages"
    },
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["patch"],
      "groupName": "Security Updates",
      "groupSlug": "security-updates",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackageNames": ["jest", "jest-*", "@testing-library/react", "@testing-library/jest-dom"],
      "groupName": "Testing Packages",
      "groupSlug": "testing-packages"
    },
    {
      "matchUpdateTypes": ["major"],
      "groupName": "Major Updates",
      "groupSlug": "major-updates",
      "automerge": false
    },
    {
      "matchPackageNames": ["react", "react-dom", "next"],
      "stabilityDays": 14
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
