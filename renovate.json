{
  "extends": [
    "config:base",
    ":rebaseStalePrs",
    "schedule:monthly"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "addLabels": [
    "renovate"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "description": "Major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "matchConfidence": "high",
      "automerge": true
    },
    {
      "description": "Automatically merge minor and patch-level updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "matchConfidence": "high",
      "automerge": true
    },
    {
      "matchConfidence": "high",
      "automerge": true,
      "extends": [
        "packages:linters"
      ]
    },
    {
      "matchConfidence": "high",
      "automerge": true,
      "extends": [
        "packages:test"
      ]
    },
    {
      "matchConfidence": "high",
      "automerge": true,
      "matchPackagePrefixes": [
        "@types/"
      ]
    }
  ],
  "ignoreTests": false,
  "automergeType": "pr",
  "separateMinorPatch": false,
  "matchConfidence": "high",
  "prCreation": "not-pending",
  "prConcurrentLimit": 10,
  "prHourlyLimit": 0,
  "prBodyNotes": [
    "@openai: ignore"
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}